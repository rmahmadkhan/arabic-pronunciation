<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <TextView
        android:id="@+id/textViewLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Press Next to start"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNiteeyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nit-eeyah"
        app:layout_constraintStart_toStartOf="@+id/buttonTarfiyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonTarfiyah" />

    <Button
        android:id="@+id/buttonHalqiyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Halqiyah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLetter" />

    <Button
        android:id="@+id/buttonLisaveyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="Lisaveyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLetter" />

    <Button
        android:id="@+id/buttonGhunna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ghunna"
        app:layout_constraintEnd_toEndOf="@+id/buttonLisaveyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonLisaveyah" />

    <Button
        android:id="@+id/buttonLahatiyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lahatiyah"
        app:layout_constraintStart_toStartOf="@+id/buttonHalqiyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonHalqiyah" />

    <Button
        android:id="@+id/buttonTarfiyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tarfiyah"
        app:layout_constraintStart_toStartOf="@+id/buttonLahatiyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonLahatiyah" />

    <Button
        android:id="@+id/buttonShafaweeyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Shafaweeyah"
        app:layout_constraintEnd_toEndOf="@+id/buttonGhunna"
        app:layout_constraintTop_toBottomOf="@+id/buttonGhunna" />

    <Button
        android:id="@+id/buttonThalqeeyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thalqeeyah"
        app:layout_constraintEnd_toEndOf="@+id/buttonShafaweeyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonShafaweeyah" />

    <Button
        android:id="@+id/buttonAsleeyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Asleeyah"
        app:layout_constraintStart_toStartOf="@+id/buttonNiteeyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonNiteeyah" />

    <Button
        android:id="@+id/buttonShajariyahHaafiyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Shajariyah_Haafiyah"
        app:layout_constraintEnd_toEndOf="@+id/buttonThalqeeyah"
        app:layout_constraintTop_toBottomOf="@+id/buttonThalqeeyah" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Score: "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonShajariyahHaafiyah" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewScore"
        app:layout_constraintStart_toEndOf="@+id/textViewScore" />


    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="50dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/finishbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="50dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>